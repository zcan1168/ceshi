.container {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    background-color: rgba(55,55,55,0.2);
}

.flex-2 {
    flex-grow: 2;
}

.flex-3 {
    flex-grow: 3;
}

.confirm-view {
    display: flex;
    flex-direction: column;
    width: 280px;
    margin: 0 auto auto;
    background-color: #FFF;
    border-radius: 5px;
    overflow: hidden;
}

.confirm-title {
    width: 100%;
    height: 50px;
    font-size: 18px;
    line-height: 50px;
    font-weight: 700;
    text-align: center;
}

.confirm-msg {
    min-height: 75px;
    max-height: 320px;
    margin: 10px 20px;
    font-size: 14px;
    line-height: 25px;
    font-weight: 300;
    text-align: center;
    word-wrap: break-word;
    overflow: hidden;
    text-overflow: ellipsis;
}

.line {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 1px;
    width: 100%;
    background-color: #999;
    transform: scaleY(.5);
    transform-origin: 0 0;
}

.line-row {
    height: 100%;
    width: 1px;
    background-color: #999;
}
.buttons-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 44px;
}

.confirm-button {
    height: 44px;
    width: 100%;
    font-size: 16px;
    line-height: 44px;
    text-align: center;
    color: rgb(60,197,31);
}

.active {
    background-color: #F1F1F1;
}
