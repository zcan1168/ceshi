.container {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    background-color: rgba(55,55,55,0);
    color: #000;
    transition: background-color 0.2s;
}

.flex-1 {
    flex-grow: 1;
}

.sheet-view {
    position: absolute;
    left: 0;
    bottom: -100%;
    width: 100%;
    flex-direction: column;
    background-color: #EEE;
    overflow: hidden;
    transition: bottom 0.2s;
}

.sheet-title {
    flex-direction: column;
    position: relative;
    width: 100%;
    height: 50px;
    margin-bottom: 5px;
    background-color: #FFF;
    color: rgb(255,0,0);
    font-size: 18px;
    line-height: 50px;
    font-weight: 700;
    text-align: center;
}
.sheet-item {
    display: flex;
    flex-direction: column;
    position: relative;
    width: 100%;
    height: 44px;
    line-height: 44px;
    background-color: #FFF;
    color: #555;
    font-size: 16px;
    font-weight: 300;
    text-align: center;
}
.line {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 1px;
    width: 100%;
    background-color: #CCC;
    transform: scaleY(.5);
    transform-origin: 0 0;
}

.sheet-cancle {
    height: 44px;
    width: 100%;
    margin-top: 5px;
    font-size: 16px;
    line-height: 44px;
    background-color: #FFF;
    color: #000;
    text-align: center;
}

.active {
    background-color: #F1F1F1;
}
